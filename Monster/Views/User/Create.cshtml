@{
    ViewBag.Title = "Create User";
}
<div class="bg-light pt-4 pb-4">
    <div class="container">
        <h4 class="display-4">
            @ViewBag.Title
            <small class="text-secondary">
                <i class="fas fa-spinner fa-pulse fa-xs" data-bind="visible: isBusy"></i>
            </small>
        </h4>
    </div>
</div>
<div class="container">
    <div class="pt-4 pb-4">
        @Html.Partial("_DetailsValue")
        <button class="btn btn-light" data-bind="click: createEntity">Create</button>
        <a class="btn btn-light" href="/User">Cancel</a>
    </div>
</div>
@section scripts
{
    <script src="~/Scripts/KOScripts/KOShared.js"></script>
    <script src="~/Scripts/KOScripts/KOSchemas/KOUser.js"></script>
    <script src="~/Scripts/KOScripts/KODetails.js"></script>
    <script>
        $(function() {
            ko.applyBindings(modelView);
            modelView.viewDetails("User", "@ViewBag.Title");
        });
    </script>
}