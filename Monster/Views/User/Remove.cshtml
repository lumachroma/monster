@{
    ViewBag.Title = "Remove User";
}
<div class="bg-light pt-4 pb-4">
    <div class="container">
        <h4 class="display-4">
            @ViewBag.Title
            <small class="text-secondary">
                <i class="fas fa-spinner fa-pulse fa-xs" data-bind="visible: isBusy"></i>
            </small>
        </h4>
    </div>
</div>
<div class="container">
    <div class="pt-4 pb-4">
        @Html.Partial("_DetailsText")
        <button class="btn btn-danger" data-bind="click: deleteEntity">Remove</button>
        <a class="btn btn-light" href="/User">Cancel</a>
    </div>
</div>
@section scripts
{
    @Scripts.Render("~/bundles/ko-scripts-details")
    <script>
    $(function() {
        ko.applyBindings(modelView);
        modelView.viewDetails("User", "@ViewBag.Title", "@ViewBag.Key");
    });
    </script>
}