@{
    ViewBag.Title = "Edit Auction";
}
<div class="mb-2">
    <h4 class="display-4">
        @ViewBag.Title
        <small class="text-secondary">
            <i class="fas fa-spinner fa-pulse fa-xs" data-bind="visible: isBusy"></i>
        </small>
    </h4>
</div>
<div class="mb-2">
    <hr />
    @Html.Partial("_DetailsValue")
    <button class="btn btn-light" data-bind="click: editEntity">Edit</button>
    <a class="btn btn-light" href="/Auction/Dashboard">Cancel</a>
</div>
@section scripts
{
    <script src="~/Scripts/KOScripts/KOShared.js"></script>
    <script src="~/Scripts/KOScripts/KOSchemas/KOAuction.js"></script>
    <script src="~/Scripts/KOScripts/KODetails.js"></script>
    <script>
        $(function () {
            ko.applyBindings(modelView);
            modelView.kendoCreateComponents = function () {
                var thisObj = this; 
                $("#start-date-time").kendoDateTimePicker({
                    value: thisObj.entity().StartDateTime(),
                    dateInput: true
                });
                $("#stop-date-time").kendoDateTimePicker({
                    value: thisObj.entity().StopDateTime(),
                    dateInput: true
                });
            };
            modelView.viewDetails("Auction", "@ViewBag.Title", "@ViewBag.Key", undefined, "/Auction/Dashboard");
        });
    </script>
}