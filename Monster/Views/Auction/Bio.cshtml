@{
    ViewBag.Title = "Bio";
}
<div class="mb-2">
    <h4 class="display-4">
        @ViewBag.Title
        <small class="text-secondary">
            <i class="fas fa-spinner fa-pulse fa-xs" data-bind="visible: isBusy"></i>
        </small>
    </h4>
    <p class="lead">@ViewBag.Message</p>
</div>
<div class="mb-2">
    <hr />
    <form class="form-horizontal" data-bind="with: entity" id="user-details-value-form">
        <div class="form-group row">
            <label class="col-md-2 col-form-label">Username</label>
            <div class="col-md-6">
                <input type="text" class="form-control form-control-sm" data-bind="value: Username" disabled="disabled" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-2 col-form-label">Email</label>
            <div class="col-md-6">
                <input type="text" class="form-control form-control-sm" data-bind="value: Email" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-2 col-form-label">Location</label>
            <div class="col-md-6">
                <input type="text" class="form-control form-control-sm" data-bind="value: Location" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-2 col-form-label">Country</label>
            <div class="col-md-6">
                <input type="text" class="form-control form-control-sm" data-bind="value: Country" />
            </div>
        </div>
    </form>
    <button class="btn btn-light" data-bind="click: editEntity">Edit</button>
    <a class="btn btn-light" href="/Auction/Dashboard">Cancel</a>
</div>
<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/knockout-3.4.2.js"></script>
<script src="~/Scripts/KOScripts/KOShared.js"></script>
<script src="~/Scripts/KOScripts/KOSchemas/KOUser.js"></script>
<script src="~/Scripts/KOScripts/KODetails.js"></script>
<script>
    $(function() {
        ko.applyBindings(modelView);
        modelView.viewDetails("User", "@ViewBag.Title", "@ViewBag.Key", undefined, "/Auction/Dashboard");
    });
</script>
