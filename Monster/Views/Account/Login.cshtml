@{
    ViewBag.Title = "Login";
}
<div class="pt-4 pb-4">
    <div class="container">
        <h1 class="display-4">@ViewBag.Title</h1>
        <p class="lead">@ViewBag.Message</p>
        <div>
            <form class="form-inline" action="/Account/Login?ReturnUrl=@ViewBag.ReturnUrl" method="post">
                <div class="form-group">
                    <label class="sr-only">Username</label>
                    <input class="form-control mb-2 mr-sm-2" type="text" placeholder="username" name="Username" />
                </div>
                <div class="form-group">
                    <label class="sr-only">Password</label>
                    <input class="form-control mb-2 mr-sm-2" type="password" placeholder="password" name="Password" />
                </div>
                <button class="btn btn-light mb-2" type="submit">Login</button>
            </form>
        </div>
        <br /><br />
        @if (!ViewBag.Success)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="text-danger">Login unsuccessful</h4>
                <p>
                    <span class="text-danger">@ViewBag.Status</span>
                </p>
            </div>
        }
    </div>
</div>